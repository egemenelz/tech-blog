<div class="comments" style="width: 600px">
  {{#each this}}

    <div class="card">
      <div class="card-header">
      </div>
      <div class="card-body">
        <blockquote class="blockquote mb-0">
          <p>{{comment_text}}</p>
          <footer class="blockquote-footer">{{user.username}}
            on
            {{format_date created_at}}</footer>
        </blockquote>
      </div>
    </div>
  {{/each}}
</div>