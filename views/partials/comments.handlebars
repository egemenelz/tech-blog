<div class="comments" style="width: 600px">
  {{#each this}}
  <div class="card mb-4">
    <div class="card-header">
    </div>
    <div class="card-body">
      <div class="relative inline-block" style="margin-left: 520px;">
        <button id="delete-comment" method="delete" 
          class="p-1 transition-colors duration-200 transform rounded-md hover:bg-opacity-25 hover:bg-red-800 focus:outline-none">
          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M6 18L18 6M6 6L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round"
              stroke-linejoin="round" />
          </svg>
        </button>
      </div>
      <blockquote class="blockquote mb-0">
        <p>{{comment_text}}</p>
        <footer class="blockquote-footer mt-3">{{user.username}}
          on
          {{format_date created_at}}</footer>
      </blockquote>
    </div>
  </div>
  {{/each}}
</div>

<script src="/javascript/delete-comment.js"></script>